{
  "manifest_version": 3,
  "name": "Oscar Tools",
  "version": "1.2.0",
  "description": "A tool for OSCAR PRO EMR.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["webNavigation","tabs","storage","activeTab","scripting"],
  "host_permissions": [
    "*://*.kai-oscar.com/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}